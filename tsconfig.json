{
  "compilerOptions": {
    "strict": false,
    "sourceMap": true,
    "target": "ES5",
    "module": "ES2015",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
